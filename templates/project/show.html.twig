{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/css/admin.css') }}">
{% endblock %}

{% block body %}

    <h1 style="color: white" class="ml-3 mt-3">Projet</h1>

    <div class="container-fluid table+ shadow-lg">
        <div class="table-responsive">
            <table class="table">
                <thead class="grey lighten-2 shadow">
                <tr>
                    <th scope="col">NÂ°</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Contenu</th>
                    <th scope="col">Date publication</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th scope="row">{{ project.id }}</th>
                    <td>{{ project.title }}</td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.content | markdown }}</td>
                    <td>{{ project.createdAt ? project.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('project_edit', {'id': project.id}) }}">Edit</a>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <a class="btn btn-outline-dark mt-3" href="{{ path('project_index') }}">Retour a la liste</a>
        {{ include('project/_delete_form.html.twig') }}
    </div>

    {% block javascripts %}
        <link rel="stylesheet"
              href="{{ asset('asset/css/hightlight.css') }}">
        <script src="{{ asset('asset/js/hightlight.js') }}"></script>
        <script>hljs.initHighlightingOnLoad();</script>
    {% endblock %}
{% endblock %}
