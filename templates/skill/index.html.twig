{% extends 'base.html.twig' %}
{% block title %}Admin{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/css/admin.css') }}">
{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand mr-5" href="#">Admin Portfolio</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('post_index') }}">Gestion articles<span
                                class="sr-only"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('project_index') }}">Gestion projets</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('skill_index') }}">Gestion competences</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('contact_index') }}">Messages</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-danger ml-3" href="{{ path('logout') }}">Se deconnecter</a>
                </li>
            </ul>
        </div>
    </nav>

    <h1 style="color: white" class="ml-3 mt-3">Competences</h1>
    <div class="container">
        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for skill in skills %}
                <tr>
                    <td>{{ skill.id }}</td>
                    <td>{{ skill.name }}</td>
                    <td>{{ skill.value }}</td>
                    <td>
                        <a style="color: white" href="{{ path('skill_show', {'id': skill.id}) }}">show</a>
                        <a style="color: white" href="{{ path('skill_edit', {'id': skill.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-info ml-2 mt-2" href="{{ path('skill_new') }}">Ajouter une competence</a>
{% endblock %}
